<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e0e0e0"
    tools:context="kamal.calculator.MainActivity">

    <RelativeLayout
        android:layout_toRightOf="@+id/history_col"
        android:layout_above="@+id/col1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--expression output-->
        <TextView
            android:id="@+id/expression_output"
            style="@style/ExpressionOutput"/>

        <!--result output-->
        <TextView
            android:id="@+id/result_output"
            style="@style/ResultOutput"/>

    </RelativeLayout>


    <!--history-->
    <TextView
        android:id="@+id/history_col"
        style="@style/MainCalcHistory"
        android:layout_toLeftOf="@+id/col4"
        android:orientation="vertical"/>

    <!--first column-->
    <LinearLayout
        android:id="@+id/col1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <!--| del |-->
        <Button
            style="@style/MainCalcFunctions"
            android:text="@string/del"
            android:onClick="btnDel"/>

        <!--| ( ) |-->
        <Button
            style="@style/MainCalcFunctions"
            android:text="@string/brackets"
            android:onClick="btnBrackets"/>

        <!--| / |-->
        <Button
            style="@style/MainCalcOperands"
            android:text="@string/div"
            android:onClick="btnDiv"/>
        <!--| x |-->
        <Button
            style="@style/MainCalcOperands"
            android:text="@string/mul"
            android:onClick="btnMul"/>

        <!--| - |-->
        <Button
            style="@style/MainCalcOperands"
            android:text="@string/sub"
            android:onClick="btnSub"/>
        <!--| + |-->
        <Button
            style="@style/MainCalcOperands"
            android:text="@string/add"
            android:onClick="btnAdd"/>
    </LinearLayout>

    <!--second column-->
    <LinearLayout
        android:id="@+id/col2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/col1"
        android:orientation="vertical">

        <!--| avg |-->
        <Button
            style="@style/MainCalcFunctions"
            android:text="@string/avg"
            android:onClick="btnAvg"
            />

        <!--| / |-->
        <Button
            style="@style/MainCalcFunctions"
            android:text="@string/fractions"
            android:onClick="btnFraction"
            />

        <!--| 9 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/nine"
            android:onClick="btn9"/>
        <!--| 6 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/six"
            android:onClick="btn6"/>

        <!--| 3 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/three"
            android:onClick="btn3"/>

        <!--| = |-->
        <Button
            style="@style/MainCalcOperands"
            android:text="@string/eq"
            android:onClick="btnEq"/>
    </LinearLayout>

    <!--third column-->
    <LinearLayout
        android:id="@+id/col3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/col2"
        android:orientation="vertical">

        <!--| FF |-->
        <Button
            style="@style/MainCalcFunctions"
            android:text="@string/F3"
            android:onClick="btnFF"/>

        <!--| x^2 |-->
        <Button
            style="@style/MainCalcFunctions"
            android:text="@string/sq"
            android:onClick="btnSq"/>

        <!--| 8 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/eight"
            android:onClick="btn8"/>

        <!--| 5 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/five"
            android:onClick="btn5"/>

        <!--| 2 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/two"
            android:onClick="btn2"/>

        <!--| 0 |-->
        <Button
            style="@style/MainCalcOperators"
            android:text="@string/zero"
            android:onClick="btn0"/>

    </LinearLayout>

    <!--fourth column-->
    <LinearLayout
        android:id="@+id/col4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/col3"
        android:orientation="vertical">

        <!--| Clear exp |-->
        <Button
            style="@style/MainCalcClear"
            android:text="@string/clearExp"
            android:background="#ef5350"
            android:onClick="btnClearExp"/>

        <!--| Clear res |-->
        <Button
            style="@style/MainCalcClear"
            android:background="#ffab91"
            android:text="@string/clearRes"
            android:onClick="btnClearRes"/>

        <!--| 7 |-->
        <Button
            style="@style/MainCalcOperators"
            android:onClick="btn7"
            android:text="@string/seven"/>

        <!--| 4 |-->
        <Button
            style="@style/MainCalcOperators"
            android:onClick="btn4"
            android:text="@string/four"/>

        <!--| 1 |-->
        <Button
            style="@style/MainCalcOperators"
            android:onClick="btn1"
            android:text="@string/one"/>

        <!--| . |-->
        <Button
            style="@style/MainCalcOperators"
            android:onClick="btnPeriod"
            android:text="@string/period"/>
    </LinearLayout>


</RelativeLayout>
