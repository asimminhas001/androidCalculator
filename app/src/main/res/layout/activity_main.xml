<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e0e0e0"
    tools:context="kamal.calculator.MainActivity.ExpressionParser">

    <RelativeLayout
        android:layout_toRightOf="@+id/history_col"
        android:layout_above="@+id/col1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--expression output-->
        <TextView
            android:id="@+id/expression_output"
            style="@style/ExpressionOutput"/>

        <!--result output-->
        <TextView
            android:id="@+id/result_output"
            style="@style/ResultOutput"/>

    </RelativeLayout>


    <!--history-->
    <TextView
        android:id="@+id/history_col"
        style="@style/MainCalcHistory"
        android:layout_toLeftOf="@+id/col4"
        android:orientation="vertical"/>

    <!--first column-->
    <LinearLayout
        android:id="@+id/col1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <!--| del |-->
        <Button
            android:id="@+id/btnDel"
            style="@style/MainCalcFunctions"
            android:text="@string/del"/>

        <!--| % |-->
        <Button
            android:id="@+id/btnRemainder"
            style="@style/MainCalcOperands"
            android:text="@string/remainder"/>

        <!--| / |-->
        <Button
            android:id="@+id/btnDiv"
            style="@style/MainCalcOperands"
            android:text="@string/div"
            />

        <!--| x |-->
        <Button
            android:id="@+id/btnMul"
            style="@style/MainCalcOperands"
            android:text="@string/mul"/>

        <!--| - |-->
        <Button
            android:id="@+id/btnSub"
            style="@style/MainCalcOperands"
            android:text="@string/sub"/>

        <!--| + |-->
        <Button
            android:id="@+id/btnAdd"
            style="@style/MainCalcOperands"
            android:text="@string/add"/>

    </LinearLayout>

    <!--second column-->
    <LinearLayout
        android:id="@+id/col2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/col1"
        android:orientation="vertical">

        <!--| avg |-->
        <Button
            android:id="@+id/btnAvg"
            style="@style/MainCalcFunctions"
            android:text="@string/avg"
            />

        <!--| ( ) |-->
        <Button
            android:id="@+id/btnBrackets"
            style="@style/MainCalcFunctions"
            android:text="@string/brackets"/>

        <!--| 9 |-->
        <Button
            android:id="@+id/btn9"
            style="@style/MainCalcOperators"
            android:text="@string/nine"
            />

        <!--| 6 |-->
        <Button
            android:id="@+id/btn6"
            style="@style/MainCalcOperators"
            android:text="@string/six"
            />

        <!--| 3 |-->
        <Button
            android:id="@+id/btn3"
            style="@style/MainCalcOperators"
            android:text="@string/three"
            />

        <!--| = |-->
        <Button
            android:id="@+id/btnEq"
            style="@style/MainCalcOperands"
            android:text="@string/eq"
            />

    </LinearLayout>

    <!--third column-->
    <LinearLayout
        android:id="@+id/col3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/col2"
        android:orientation="vertical">

        <!--| log |-->
        <Button
            android:id="@+id/btnLog"
            style="@style/MainCalcFunctions"
            android:text="@string/log"
            />

        <!--| ^ |-->
        <Button
            android:id="@+id/btnExponent"
            android:textSize="25sp"
            style="@style/MainCalcFunctions"
            android:text="@string/exponent"
            />

        <!--| 8 |-->
        <Button
            android:id="@+id/btn8"
            style="@style/MainCalcOperators"
            android:text="@string/eight"
            />

        <!--| 5 |-->
        <Button
            android:id="@+id/btn5"
            style="@style/MainCalcOperators"
            android:text="@string/five"
            />

        <!--| 2 |-->
        <Button
            android:id="@+id/btn2"
            style="@style/MainCalcOperators"
            android:text="@string/two"
            />

        <!--| 0 |-->
        <Button
            android:id="@+id/btn0"
            style="@style/MainCalcOperators"
            android:text="@string/zero"
            />

    </LinearLayout>

    <!--fourth column-->
    <LinearLayout
        android:id="@+id/col4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/col3"
        android:orientation="vertical">

        <!--| Clear exp |-->
        <Button
            android:id="@+id/btnClearExp"
            style="@style/MainCalcClear"
            android:text="@string/clearExp"
            android:background="#fafafa"
            />

        <!--| Clear All |-->
        <Button
            android:id="@+id/btnClearAll"
            style="@style/MainCalcClear"
            android:background="#d7ccc8"
            android:text="@string/clearAll"
            />

        <!--| 7 |-->
        <Button
            android:id="@+id/btn7"
            style="@style/MainCalcOperators"
            android:text="@string/seven"/>

        <!--| 4 |-->
        <Button
            android:id="@+id/btn4"
            style="@style/MainCalcOperators"
            android:text="@string/four"/>

        <!--| 1 |-->
        <Button
            android:id="@+id/btn1"
            style="@style/MainCalcOperators"
            android:onClick="btn1"
            android:text="@string/one"/>

        <!--| . |-->
        <Button
            android:id="@+id/btnPeriod"
            style="@style/MainCalcOperators"
            android:text="@string/period"/>
    </LinearLayout>

</RelativeLayout>
